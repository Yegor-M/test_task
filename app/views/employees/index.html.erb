<p id="notice"><%= notice %></p>

<h1>Search for Employees</h1>

<div class="form">
<%= form_for(employees_path, method: :get) do %>
  Employee's Name <%= text_field_tag :name, params[:name],{class: "form-control"} %> <br>
  Employee's Department Name <%= select_tag(:department_id, options_for_select(@departments),{class: "form-control"}) %> <br>
  Employee's Status: <br>
  <%= radio_button_tag(:active, true) %>
  <%= label_tag(:active, "Acive") %>
  <%= radio_button_tag(:active, false) %>
  <%= label_tag(:active, "Busy") %> <br>
  <%= submit_tag ('Search'), name: nil,class: 'btn btn-primary' %>
  <%= link_to 'Back',root_path, class: 'btn btn-danger' %>
<% end %>
</div>
<%= link_to 'New Employee', new_employee_path,style: 'text-align: center; display: inherit;' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.active %></td>
        <td><%= employee.department.id %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
